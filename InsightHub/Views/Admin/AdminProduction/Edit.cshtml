@using InsightHub.Models
@{
    ViewData["Title"] = "Edição de Projeto";
    Layout = "_LayoutUnscoped";
}
<div class="insert-form">
    <link rel="stylesheet" href="~/admin/css/main.css" asp-append-version="true" />

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            font-size: 2em;
            color: white;
        }

        h1 {
            font-size: 2.5em;
            display: flex;
            justify-content: space-around;
        }

        form {
            max-width: 400px;
            margin: auto;
            display: grid;
            justify-items: center;
        }

        label {
            display: flex;
            margin-top: 10px;
        }

        input[type="text"],
        input[type="date"] {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 3px black solid;
            border-radius: 10px;
        }

        button {
            margin-top: 15px;
            padding: 10px 15px;
            background-color: #4CAF50;
            color: white;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        select {
            width: 100%;
            height: 80px;
            border-radius: 10px;
            top: 14px;
            right: 10px;
            background-color: transparent;
            border: 2px black solid;
        }
    </style>

    <h1>Edição de Projeto</h1>
    <br>
    <form
        action="@(ViewBag.Projeto != null ? "/gerenciador/projetos/edit-form/"+ViewBag.Projeto.Id : "/gerenciador/projetos/add-form")"
        enctype="multipart/form-data" method="post">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" value="@(ViewBag.Projeto != null ? ViewBag.Projeto.Nome : null)"
            required>

        <label for="dataInicio">Data de Início:</label>
        <input type="date" id="dataInicio" name="dataInicio"
            value="@(ViewBag.Projeto != null ? ViewBag.Projeto.DataInicio.ToString("yyyy-MM-dd") : null)" required>

        <label for="dataFim">Data de Fim:</label>
        <input type="date" id="dataFim" name="dataFim" class="data"
            value="@(ViewBag.Projeto != null ? ViewBag.Projeto.DataFim.ToString("yyyy-MM-dd") : null)" required>

        <label for="subarea">Subarea do projeto:</label>
        <select id="subarea" name="SubareaKey" required>
            @foreach (SubareaConhecimento item in ViewBag.Subareas)
            {
                if (ViewBag.Projeto != null && ViewBag.Projeto.SubareaKey == item.Id){
                    <option value="@item.Id" selected>@item.Nome</option>
                }else{
                    <option value="@item.Id">@item.Nome</option>
                }
            }
        </select>

        <button type="submit" class="button button--add">Cadastrar</button>
    </form>
</div>