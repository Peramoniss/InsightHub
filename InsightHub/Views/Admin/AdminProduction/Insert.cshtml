        <h1>Cadastro de Projeto</h1>
        <br>
        <form action="/gerenciador/projetos/add-form" enctype="multipart/form-data" method="post">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" required>

            <label for="dataInicio">Data de Início:</label>
            <input type="date" id="dataInicio" name="dataInicio" required>

            <label for="dataFim">Data de Fim:</label>
            <input type="date" id="dataFim" name="dataFim" class="data" required>

            <label for="area">Área do projeto:</label>
                <select id="area" name="areas[]" multiple>
                    @foreach (var item in areas){
                        <option value="@item.Id">@item.Nome</option>
                    }
                </select>

            <label for="subarea">Subarea do projeto:</label>
                <select id="subarea" name="subareas[]" multiple>
                    @foreach (var item in subareas){
                        <option value="@item.Id">@item.Nome</option>
                    }
                </select>

            <button type="submit" class="button button--add">Cadastrar</button>
        </form>
