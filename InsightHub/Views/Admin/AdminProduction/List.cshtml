@using InsightHub.Models

@{
    ViewData["Title"] = "Admin Projetos Listagem Page";
    Layout = "_AdminLayout";
}

<div class="productions">
    <div class="header">
        <div class="left">
            <a class="button button--back" href="/gerenciador">
                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px"
                    fill="#e8eaed">
                    <path d="m313-440 224 224-57 56-320-320 320-320 57 56-224 224h487v80H313Z" />
                </svg>
                Voltar
            </a>
            <div class="breadcrumbs">
                <a href="/gerenciador">Início</a>
                <a href="">Listagem Produções</a>
            </div>
            <div class="title">Lista de Produções</div>
        </div>
        <div class="right">
            <a class="button button--add" href="/gerenciador/projetos/edit/0">
                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px"
                    fill="#e8eaed">
                    <path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z" />
                </svg>
                Adicionar
            </a>
        </div>
    </div>

    <script>
        function deleteProject(id) {
            if (confirm('Tem certeza que deseja excluir este registro?')) {
                fetch('/gerenciador/projetos/delete', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: 'id=' + id
                })
                .then(response => {
                    if (response.ok) {
                        // Remover a linha da tabela
                        document.getElementById('row-' + id).remove();
                    } else {
                        alert('Erro ao excluir o registro.');
                    }
                })
                .catch(error => {
                    console.error('Erro:', error);
                    alert('Erro ao excluir o registro.');
                });
            }
        }
    </script>

    <div class="content">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Data Início</th>
                    <th>Data Fim</th>
                    <th>Tipo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Projeto projeto in ViewBag.Projetos)
                {
                    <tr id="row-@projeto.Id">
                        <td>@projeto.Id</td>
                        <td>@projeto.Nome</td>
                        <td>@projeto.DataInicio</td>
                        <td>@projeto.DataFim</td>
                        <td>Pesquisa</td>
                        <td>
                            <div class="buttons-wrapper">
                                <a href="projetos/edit/@projeto.Id" class="button button--edit">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960"
                                        width="24px" fill="#e8eaed">
                                        <path
                                            d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z" />
                                    </svg>
                                    Editar
                                </a>
                                <a onclick="deleteProject(@projeto.Id)" class="button button--delete">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960"
                                        width="24px" fill="#e8eaed">
                                        <path
                                            d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z" />
                                    </svg>
                                    Excluir
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <ul class="pagination">
        <li><a class="" href="#">«</a></li>
        <li><a href="#">1</a></li>
        <li><a href="#" class="active">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li><a href="#">6</a></li>
        <li><a href="#">7</a></li>
        <li><a href="#">»</a></li>
    </ul>
</div>
