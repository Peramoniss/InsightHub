@{
    ViewData["Title"] = "Cadastro de Pesquisador";
    Layout = "_LayoutUnscoped";
}
<div class="insert-form">
    <link rel="stylesheet" href="~/admin/css/main.css" asp-append-version="true" />
    
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            font-size: 2em;
            color: white;
        }
        h1{
            font-size: 2.5em;
            display: flex;
            justify-content: space-around;
        }
        form {
            max-width: 400px;
            margin: auto;
            display: grid;
            justify-items: center;
        }
        label {
            display: flex;
            margin-top: 10px;
        }
        input[type="text"], input[type="date"], input[type="email"] {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 3px black solid;
            border-radius: 10px;
        }
        button {
            margin-top: 15px;
            padding: 10px 15px;
            background-color: #4CAF50;
            color: white;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }

    </style>
    <script>
        function redirecionar(event) {
            event.preventDefault(); // Evita o envio padrão do formulário

            // Validar o formulário
            var form = event.target;
            if (form.checkValidity()) {
                // Se o formulário for válido, redirecionar para uma página de sucesso
                alert('Pesquisador cadastrado com sucesso!');
                window.location.href = '/gerenciador/pesquisadores'; // Descomente e ajuste conforme necessário
            } else {
                // Caso contrário, exibir as mensagens de validação nativas
                form.reportValidity();
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            var form = document.querySelector('form');
            form.addEventListener('submit', redirecionar);
        });
    </script>


        <h1>Cadastro de Pesquisador</h1>
        <br>
        <form>
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email">

            <button type="submit" class="button button--add">Cadastrar</button>
        </form>
</div>